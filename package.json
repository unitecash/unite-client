{
  "name": "Unite",
  "version": "1.0.0",
  "description": "Unite.cash - We Stand Against Censorship",
  "main": "index.js",
  "scripts": {
    "lint-ts": "standard --fix --parser typescript-eslint-parser --plugin typescript ./src/**/*.ts",
    "lint-js": "standard --fix ./src/**/*.js",
    "test": "karma start tests/karma.conf.js",
    "test:feature": "karma start tests/feature/karma.conf.js",
    "test:unit": "karma start tests/unit/karma.conf.js",
    "dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "start": "electron .",
    "start-watch": "concurrently --kill-others \"npm run watch\" \"npm run start\"",
    "package-all": "electron-packager . Unite --all",
    "package-mac": "electron-packager . Unite --overwrite --platform=darwin --arch=x64 --icon=public/images/icon.icns --prune=true --out=build/Release",
    "package-win": "electron-packager . Unite --overwrite --asar=true --platform=win32 --arch=ia32 --icon=public/images/icon.ico --prune=true --out=build/Release --version-string.CompanyName=Unite --version-string.FileDescription=Unite --version-string.ProductName=\"Unite\"",
    "package-linux": "electron-packager . Unite --overwrite --asar=true --platform=linux --arch=x64 --icon=public/images/icon.png --prune=true --out=build/Release",
    "build-setup-win": "electron-installer-windows --src build/Release/Unite-win32-x64/ --dest dist/installers/"
  },
  "repository": "https://github.com/unitecash/unite-client.git",
  "keywords": [
    "unite",
    "bitcoin",
    "cash",
    "censorship",
    "decentralized"
  ],
  "author": "The Unite.cash Developers",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-spies": "0.0.1",
    "@types/deep-equal": "^1.0.1",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.2",
    "@types/sinon": "^4.3.3",
    "@types/sinon-chai": "^2.7.31",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.11",
    "electron": "^1.8.4",
    "electron-packager": "^12.0.1",
    "eslint-plugin-typescript": "^0.12.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^3.0.0",
    "mocha": "^5.1.1",
    "mocha-loader": "^1.1.3",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "standard": "^11.0.1",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.3.0",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0",
    "webpack": "^4.8.2",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "async-series": "0.0.1",
    "bchaddrjs": "^0.2.1",
    "bitcoincashjs": "^0.1.10",
    "electron-winstaller": "^2.6.4",
    "ipfs": "^0.29.3",
    "jquery": "^3.3.1",
    "npm": "^6.0.0",
    "socket.io": "^2.1.1"
  }
}
